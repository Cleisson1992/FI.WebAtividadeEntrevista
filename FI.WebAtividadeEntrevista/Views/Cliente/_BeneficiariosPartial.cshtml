<div class="modal fade" id="modalBeneficiarios" tabindex="-1" role="dialog" aria-labelledby="modalBeneficiariosLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex align-items-center">
                <h5 class="modal-title mb-0 mr-3" style="display: inline-flex;" id="modalBeneficiariosLabel">Beneficiários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formBeneficiario">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="CPFBeneficiario">CPF:</label>
                            <input type="text" class="form-control" id="CPFBeneficiario" name="CPFBeneficiario" placeholder="Ex.: 999.999.999-99" maxlength="14" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="NomeBeneficiario">Nome:</label>
                            <input type="text" class="form-control" id="NomeBeneficiario" name="NomeBeneficiario" placeholder="Ex.: Maria" maxlength="50" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label style="visibility: hidden;">Botão</label> <br />
                            <button type="button" id="btnSalvarBeneficiario" class="btn btn-sm btn-success">Incluir</button>
                        </div>
                    </div>
                </form>
                <table class="table table-striped" id="gridBeneficiarios">
                    <thead>
                        <tr>
                            <th>CPF</th>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Beneficiários cadastrados serão adicionados aqui -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
